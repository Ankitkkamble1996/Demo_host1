<odoo>
    <menuitem id="mix_desine_root_menu" name="Concrete Mix design"/>
    <menuitem id="mix_disigne_menu" name="Mix Design" parent="mix_desine_root_menu"/>

     <record id="action_mix_design" model="ir.actions.act_window">
        <field name="name">Mix Design</field>
        <field name="res_model">mechanical.concrete.design</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="lerm_mix_parent_action" model="ir.actions.act_window">
            <field name="name">Concrete Mix Design</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lerm.mix.design.parent</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Concrete Mix Design</p>
            </field>
        </record>

    <menuitem id="mix_menu_item"
              name="Mix Design"
              parent="mix_desine_root_menu"
              action="lerm_mix_parent_action"/>

</odoo>