<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_open_ert_report_wizard" model="ir.actions.act_window">
            <field name="name">ERT Report Wizard</field>
            <field name="res_model">ert.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_ert_report_wizard_form" model="ir.ui.view">
            <field name="name">ert.report.wizard.form</field>
            <field name="model">ert.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Download ERT Reports">
                    <sheet>
                        <group>
                            <field name="parent_id" readonly="1"/>
                        </group>
                        <field name="line_ids">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="selected"/>
                                <field name="soil_resistivity_id" readonly="1"/>
                                <field name="line_id" invisible="1" optional="hide"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button string="Download Reports"
                                type="object"
                                name="action_print_reports"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ert_parent_view" model="ir.ui.view">
            <field name="name">lerm.ert.parent.form</field>
            <field name="model">lerm.ert.parent</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="%(action_open_ert_report_wizard)d"
                            string="Print ERT Reports"
                            type="action"
                            class="btn-primary"/>
                    </header>
              
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="rec_date"/>
                        </group>

                        
                        <button
                            type="object"
                            class="oe_highlight" 
                            name="create_ert"
                            string="Create ERT"
                            />

                        <field name="ert_lines" readonly="1">
                            <tree editable="bottom">
                                <field name="soil_resistivity_id" widget="many2one" options="{'no_open': False}"/>
                                <field name="create_date" readonly="1"/>
                            </tree>
                        </field>
                    
                    
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_print_report" model="ir.actions.server">
            <field name="name">Print Report</field>
            <field name="model_id" ref="model_lerm_ert_parent"/>   <!-- your model -->
            <field name="binding_model_id" ref="model_lerm_ert_parent"/>  <!-- bind to model -->
            <field name="binding_view_types">list</field>   <!-- will appear in Action menu of tree view -->
            <field name="state">code</field>
            <field name="code">records.print_report()</field>
        </record>

        <record id="ert_parent_tree_view" model="ir.ui.view">
            <field name="name">lerm.ert.parent.tree</field>
            <field name="model">lerm.ert.parent</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- <header>
                        <button name="print_report" string="Print Report" type="object" class="btn-primary"/>
                    </header> -->
                    <field name='name'/>
                    <field name="rec_date" optional="show" />
                </tree>
            </field>
        </record>
        

       
        <record id="lerm_ert_parent_action" model="ir.actions.act_window">
            <field name="name">ERT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lerm.ert.parent</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">ERT</p>
            </field>
        </record>

        <record id="action_ert_dashboard" model="ir.actions.act_window">
            <field name="name">FST Dashboard</field>
            <field name="res_model">lerm.ert.dashboard</field>
            <field name="view_mode">kanban</field>
            <field name="target">current</field>
        </record>

        <record id="action_lerm_ert_parent" model="ir.actions.act_window">
            <field name="name">ERTs</field>
            <field name="res_model">lerm.ert.parent</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        

        <menuitem id="fst_root"
            name="FST"
            sequence="11"
            action="action_ert_dashboard" 
            /> 

        <menuitem id="ert_menuitem"
            name="ERT"
            sequence="10"
            parent="fst_root"
            action="lerm_ert_parent_action"
            /> 

        
            
        <record id="view_ert_dashboard" model="ir.ui.view">
            <field name="name">lerm.ert.dashboard.view</field>
            <field name="model">lerm.ert.dashboard</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="false" delete="false">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_card_header">
                                    <strong>ERTs</strong>
                                </div>
                                <div class="o_kanban_card_content">
                                    <a type="action"
                                    name="%(action_lerm_ert_parent)d"
                                    class="btn btn-primary">
                                        Create ERT
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Ensure one record exists -->
        <record id="lerm_ert_dashboard_record" model="lerm.ert.dashboard"/>
        

        <menuitem id="menu_ert_dashboard"
          name="FST Dashboard"
          parent="fst_root"
          action="action_ert_dashboard"
          sequence="1"/>


    </data>
</odoo>